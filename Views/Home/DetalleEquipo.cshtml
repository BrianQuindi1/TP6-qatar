@{
    ViewData["Title"] = "Detalle Pais";
}

<div>
    <h1 class="textoBlanco">@ViewBag.DetalleEquipo.Nombre</h1>
    <div class="row">
        <div class="col-7">
            <img class="tamanoImg" src="/imagenes/@ViewBag.DetalleEquipo.Escudo">
        </div>

        <h3 class="textoBlanco">__________________________________________________________________</h3>

        <div class="col-7">
            <img class="tamanoImg" src="/imagenes/@ViewBag.DetalleEquipo.Camiseta">
        </div>
    </div>
    <h1 class="textoBlanco">Copas Ganadas: @ViewBag.DetalleEquipo.CopasGanadas</h1>
    <h1 class="textoBlanco">Continente: @ViewBag.DetalleEquipo.Continente</h1>
    <h2 class="textoBlanco">Jugadores</h2>
</div>

 <div class="container" >
        <div class="row">
@foreach (Jugador jug in @ViewBag.DetalleJugador)
{
   
            <div class="col-sm">
                <h4 class="textoBlanco">@jug.Nombre</h4>
            </div>
            <div class="col-sm">
                <a class="btn  btn-primary " href='@Url.Action("DetalleJugador","Home",new{IdJugador = @jug.IdJugador} )'>Ver info del jugador</a>
                
            </div>

}
        </div>
    </div>
<div>
    <form method="post" action='@Url.Action("AgregarJugador","Home")'>
    <input type="hidden" name="IdEquipo" value="@ViewBag.DetalleEquipo.IdEquipo"/>
    <input name="INFO" class="btn btn-primary" role="button" value="Agregar Jugador" type="submit"/>
    </form>
</div>
